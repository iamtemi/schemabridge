{
  "name": "schemabridge",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm --filter @schemabridge/core format",
    "format:check": "pnpm --filter @schemabridge/core format:check",
    "test:coverage": "pnpm --filter @schemabridge/core test:coverage",
    "typecheck": "pnpm -r typecheck",
    "docs:dev": "pnpm --filter @schemabridge/docs dev",
    "docs:build": "pnpm --filter @schemabridge/docs build",
    "docs:preview": "pnpm --filter @schemabridge/docs preview",
    "set-version": "node scripts/set-version.js"
  },
  "devDependencies": {
    "prettier": "^3.7.2"
  }
}
